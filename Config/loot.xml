<config>
	<!-- Removes the standard airdrop loot table to be added back later -->
	<remove xpath="/lootcontainers/lootcontainer[@id='34']" />
	<!-- Slightly increases the amount of feathers and eggs found in nests -->
	<remove xpath="/lootcontainers/lootgroup[@name='groupBirdNest']/item[@name='foodEgg']" />
	<set xpath="/lootcontainers/lootgroup[@name='groupBirdNest']/item[@name='resourceFeather']/@prob">1</set>
	<set xpath="/lootcontainers/lootgroup[@name='groupBirdNest']/item[@name='resourceFeather']/@count">3,9</set>
	<append xpath="/lootcontainers/lootgroup[@name='groupBirdNest']">
		<item name="foodEgg" count="1,8" prob="0.75"/>
	</append>
	<!-- Reduces the amount of clean bottled water found in loot -->
	<remove xpath="/lootcontainers/lootgroup[@name='cupboard']/item[@name='drinkJarBoiledWater']" />
	<set xpath="/lootcontainers/lootcontainer[@id='36']/item[@name='drinkJarBoiledWater']/@count">1</set>
	<set xpath="/lootcontainers/lootcontainer[@id='36']/item[@name='drinkJarBoiledWater']/@prob">0.05</set>
	<set xpath="/lootcontainers/lootcontainer[@id='47']/item[@name='drinkJarBoiledWater']/@count">1</set>
	<set xpath="/lootcontainers/lootcontainer[@id='47']/item[@name='drinkJarBoiledWater']/@prob">0.05</set>
	<!-- Adds a small chance for bottles of acid and medicinal honey to be looted from cupboards -->
	<append xpath="/lootcontainers/lootgroup[@name='cupboard']">
		<item name="resourceAcid" count="1,2" prob="0.02" />
		<item name="foodMedicalHoney" count="1,2" prob="0.02" />
	</append>
	<!-- Adds new airdrop loot table -->
	<append xpath="/lootcontainers">
		<lootcontainer id="34" count="24" size="10,6" destroy_on_close="true" sound_open="SupplyDrops/open_supply_crate" sound_close="SupplyDrops/close_supply_crate" loot_quality_template="qualBaseTemplate">
			<item group="cannedfood" count="6,12" prob="2"/>
			<item group="groupAmmoAdvancedGunslinger" count="18,100" prob="0.8"/>
			<item group="groupAmmoRegular" count="12,42" prob="0.4"/>
			<item group="groupAmmoAdvanced" count="16,64" prob="0.6"/>
			<item group="rareOres" count="2,4" prob="0.2"/>
			<item group="electricalDevices" count="2,4" prob="0.2"/>
			<item name="ammoGasCan" count="250,1000" prob="0.6"/>
			<item name="resourceCoal" count="100,250" prob="0.6"/>
			<item name="resourceGunPowder" count="100,250" prob="0.6"/>
			<item name="resourcePotassiumNitratePowder" count="100,250" prob="0.6"/>
			<item name="resourceGlue" count="10,50" prob="0.3"/>
			<item name="resourceOilShale" count="50,200" prob="0.4"/>
			<item group="brassResource" count="16,64" prob="0.2"/>
			<item name="medicalFirstAidKit" count="3,12" prob="2"/>		
			<item group="rareBooks" count="3,6" prob="0.4"/>
			<item group="warmClothes" count="1,2" loot_prob_template="probTemplate1.0"/>
			<item group="groupArmor_HeavyTPlus" count="1,3" loot_prob_template="probTemplate1.0"/>
			<item group="groupArmor_LightTPlus" count="2,3" loot_prob_template="probTemplate0.75"/>
			<item name="casinoCoin" count="1000,30000" prob="0.05"/>
			<item name="oldCash" count="1000,30000" prob="0.05"/>
			<item group="dyes" count="1,3" prob="0.3"/>
		</lootcontainer>
	</append>
	<!-- Adds Bile Duct loot to cop zombies -->
	<append xpath="/lootcontainers">
		<lootcontainer id="169" count="1" size="1,1" destroy_on_close="false" sound_open="UseActions/open_backpack" sound_close="UseActions/close_backpack" open_time="1" loot_quality_template="baseTemplate">
			<item name="itemBileDuct" count="1" prob="1"/>
		</lootcontainer>	
	</append>
</config>
