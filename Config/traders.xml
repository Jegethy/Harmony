<configs>

	<!-- Slightly increases the amount of items bought and sold by traders -->
	<set xpath="/traders/trader_info[@id='1']/@min_inventory">60</set>
	<set xpath="/traders/trader_info[@id='1']/@max_inventory">120</set>
	<set xpath="/traders/trader_info[@id='1']/@min_items_swapped">60</set>
	<set xpath="/traders/trader_info[@id='1']/@max_items_swapped">120</set>

	<!-- Modifies the opening and closing times of the trader -->
	<set xpath="/traders/trader_info[@id='1']/@open_time">4:30</set>
	<set xpath="/traders/trader_info[@id='1']/@close_time">22:00</set>

	<!-- Modifies how often the trader's inventory will refresh -->
	<set xpath="/traders/trader_info[@id='1']/@reset_interval">3</set>

	<!-- Updates the trader with modified face items 
	<set xpath="/traders/trader_item_groups/trader_item_group/item[@name='apparelShades']/@name">apparelShadesNew</set>
	<set xpath="/traders/trader_item_groups/trader_item_group/item[@name='apparelNerdGlasses']/@name">apparelNerdGlassesNew</set>
	<set xpath="/traders/trader_item_groups/trader_item_group/item[@name='apparelSkiGoggles']/@name">apparelSkiGogglesNew</set>
	<set xpath="/traders/trader_item_groups/trader_item_group/item[@name='apparelAviatorGoggles']/@name">apparelAviatorGogglesNew</set>
	<set xpath="/traders/trader_item_groups/trader_item_group/item[@name='apparelCigar']/@name">apparelCigarNew</set>
	<set xpath="/traders/trader_item_groups/trader_item_group/item[@name='apparelFacialPiercings']/@name">apparelFacialPiercingsNew</set>
	-->

</configs>
